<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.game.awayteam.AwayTeamFragment">

    <TextView
            style="@style/title_game_wizard"
            android:text="Time Visitante"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/home_team_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            style="@style/subtitle_game_wizard"
            android:text="Qual o time adversÃ¡rio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/home_team_subtitle"
            app:layout_constraintStart_toStartOf="@+id/home_team_title"
            app:layout_constraintTop_toBottomOf="@+id/home_team_title"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/home_team_title"/>
    <EditText
            style="@style/input_wizard"
            android:hint="Ex.: Liverpool"
            android:id="@+id/home_team_hint"
            app:layout_constraintStart_toStartOf="@+id/home_team_title"
            app:layout_constraintTop_toBottomOf="@+id/home_team_subtitle"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/home_team_subtitle"/>
    <Button
            android:text="@string/game_next"
            style="@style/custom_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btNext"
            app:layout_constraintTop_toBottomOf="@+id/home_team_hint"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="@+id/home_team_title"
            app:layout_constraintEnd_toEndOf="@+id/home_team_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>